<UserControl x:Class="LicenseHeaderManager.Options.WpfDefaultLicenseHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lho="clr-namespace:LicenseHeaderManager.Options"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <DockPanel>
    <Label DockPanel.Dock="Top">Default text for new license header definitions:</Label>
    <lho:InteropTextBox x:Name="defaultText" Text="{Binding LicenseHeaderFileText, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Stretch" />
  </DockPanel>
</UserControl>
